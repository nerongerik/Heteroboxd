{
  "expo": {
    "scheme": "heteroscheme",
    "name": "Heteroboxd",
    "slug": "Heteroboxd",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/master.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/master.png",
      "resizeMode": "cover",
      "backgroundColor": "#0075ff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.nerongerik.heteroboxd"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/foreground.png",
        "backgroundColor": "#0075ff"
      },
      "edgeToEdgeEnabled": true,
      "backgroundColor": "#191d1f",
      "statusBar": {
        "barStyle": "light-content",
        "backgroundColor": "#191d1f"
      },
      "googleServicesFile": "./google-services.json",
      "package": "com.nerongerik.heteroboxd"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-image-picker",
      "expo-secure-store",
      "expo-font"
    ]
  }
}
